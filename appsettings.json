{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=GestusDb;Username=postgres;Password=Reboot3!;Include Error Detail=true"
  },
  "App": {
    "BaseUrl": "https://localhost:7001",
    "Name": "Gestus IAM",
    "Version": "1.0.0"
  },
  "Security": {
    "FileEncryptionKey": "GestusFileKey2024!@#$%",
    "EmailEncryptionKey": "GestusEmailKey2024!@#$%"
  },
  "Email": {
    "Templates": {
      "BaseUrl": "https://localhost:7001",
      "SupportEmail": "suporte@gestus.local",
      "DefaultSender": "Sistema Gestus"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/gestus-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Identity": {
    "Password": {
      "RequiredLength": 8,
      "RequireDigit": true,
      "RequireLowercase": true,
      "RequireUppercase": true,
      "RequireNonAlphanumeric": true
    },
    "Lockout": {
      "DefaultLockoutTimeSpan": "00:05:00",
      "MaxFailedAccessAttempts": 5,
      "AllowedForNewUsers": true
    },
    "SignIn": {
      "RequireConfirmedEmail": false,
      "RequireConfirmedPhoneNumber": false
    }
  },
  "OpenIddict": {
    "Server": {
      "Issuer": "https://localhost:7001",
      "AccessTokenLifetime": "01:00:00",
      "RefreshTokenLifetime": "30.00:00:00"
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:3000",
      "http://localhost:3000"
    ],
    "AllowedHeaders": [
      "Content-Type",
      "Authorization",
      "X-Requested-With"
    ],
    "AllowedMethods": [
      "GET",
      "POST",
      "PUT",
      "DELETE",
      "OPTIONS"
    ]
  },
  "HealthChecks": {
    "UI": {
      "Path": "/saude-ui",
      "ApiPath": "/saude-api"
    }
  },
  "Swagger": {
    "Title": "Gestus API",
    "Version": "v1",
    "Description": "Sistema IAM (Identity & Access Management) para gerenciamento de autenticação, autorização e permissões granularizadas"
  },
  "SpiceDB": {
    "Endpoint": "localhost:50051",
    "Token": "",
    "Schema": "gestus"
  },
  "AllowedHosts": "*"
}